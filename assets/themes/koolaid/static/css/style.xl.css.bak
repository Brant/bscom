/*
 * Small sized screens
 * 
 * e.g. phones
 * 
 * low: 1440px
 */
@media all and (min-width:1440px){
	
	.show-on-medium-only,
	.show-on-small-only{
		display:none;
	}
	.width{
		width:1400px;
	}
	
	/*
	 * Blog
	 */
	.blog-index-article{
		margin-right:400px;
	}
	.blog-month-tracker{
		width:220px;
		right:-455px;
	}
	.blog-entry-thumb{
		margin:0 60px 0 0px;
	}
	
	/*
	 * ribbons
	 */
	.ribbon{
		
	}
	.sidebar .ribbon{
		margin-left:128px;
	}
	.content-with-sidebar{
		width:70%;
	}
	.sidebar{
		width:29%;
	}
	/*
	 * Alternating layout for a page
	 */
	
	.alternate .alternate-left{
		padding:40px 290px 20px 290px;
	}
	
	.alternate .alternate-right{
		padding:40px 290px 20px 290px;
	}
	.alternate .ribbon{
		width:270px;	
	}
	/*
	 * folio
	 */
	.folio-piece h1,
	.folio-piece p{
		margin:0 0 0 325px;
	}
	.folio-piece{
		
		
		
		padding:50px 400px 50px 0;
		
	}

	
}